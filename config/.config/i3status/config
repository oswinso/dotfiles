general {
        output_format = "i3bar"
        colors = true
        color_good = "#4CAF50"
        color_bad = "#F44336"
        interval = 5
}

# order += "ethernet enp37s0"
order += "wireless wlan0"
order += "battery all"
order += "volume master"
order += "load"
order += "tztime local"

wireless wlan0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

battery all {
        format = "%status %percentage        REM: %remaining         %emptytime"
        format_down = "No battery"
        status_chr = ""
        hide_seconds = true
        status_bat = ""
        status_unk = "? UNK"
        status_full = " FULL"
        low_threshold = 30
        threshold_type = time
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

ethernet enp37s0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

tztime local {
        format = "%m-%d %H:%M"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

load {
        format = "%5min"
}
